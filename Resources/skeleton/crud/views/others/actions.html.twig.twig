
    <div class="btn-toolbar" role="toolbar">

        {%- for action in record_actions %}

            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-default btn-group" role="group">
                {% if action == 'edit' %}
                    <i class="fa fa-pencil-square-o"></i> {{ '{{ "'~ action ~'"|trans }}' }}
                {% elseif action == 'show' %}
                    <i class="fa fa-eye"></i> {{ '{{ "'~ action ~'"|trans }}' }}
                {% else %}
                    {{ '{{ "'~ action ~'"|trans }}' }}
                {% endif %}
            </a>

        {%- endfor %}

    </div>